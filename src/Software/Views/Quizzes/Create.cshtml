@model Software.DomainModels.QuizViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a Quiz</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>New Quiz</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Question" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Question" cols="80" rows="2" class="form-control"></textarea>
                <span asp-validation-for="Question" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Answer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Answer" cols="80" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Answer" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Notes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Notes" cols="80" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger" />
            </div>
        </div>
       <div class="form-group">
            <label asp-for="Topic" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.TopicId, new SelectList(Model.Topics, "Id", "Summary"), "", new { @class = "form-control" })
               <span asp-validation-for="TopicId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<Software.DomainModels.Question>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionSummary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionSummary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuestioinId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuestioinId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuestioinId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model Software.DomainModels.Question

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Subject" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Topic" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionSummary" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionSummary" class="form-control" />
                <span asp-validation-for="QuestionSummary" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionMessage" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionMessage" class="form-control" />
                <span asp-validation-for="QuestionMessage" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Questioner" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label asp-for="Questioner">@Model.Questioner.Email</label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label asp-for="DateTime">@Model.DateTime.ToString("h:mm:ss tt")</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
